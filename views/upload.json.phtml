<?php

$total = 0;
foreach ( $uploads as $file ) {

if ($file['size'] == 0) {
	$error = true; 
	continue;
}

$res[$file['upload_name']] = [
	'url' => $_SERVER['REQUEST_SCHEME'] . '://' . HOST . '/' . $file['id'] . '/' . $file['name'],
	'size' => number_format($file['size'], 0, '.', ' ')
];
}
if ( isset($error) ) $res['error'] = $error;

echo json_encode($res);